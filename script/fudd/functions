/*
 * Some useful functions for TekNap
 *
 * Author: Brian Weiss <brian@got.net> - 2000
 */

alias checkuserclass (nick, void)
{
	^local ulevel
	wait for whois -cmd
	{
		switch ($tr(/"//$1))
		{
			(Leech) {@ ulevel = [0]}
			(User) {@ ulevel = [1]}
			(Moderator) {@ ulevel = [2]}
			(Admin) {@ ulevel = [3]}
			(Elite) {@ ulevel = [4]}
		}
	} $nick
	@ function_return = ulevel
}

alias fparse
{
	eval return $cparse($($0))
}
